 <% flash.each do |key,value| %>
     <div style="color:#0000FF;font-size: 16px;"><%= value %></div>
  <%end%>
<div class="post_content">
  <%= image_tag "gravatar.jpg",:height=>100,:width=>100,:class=>"set_middle" %>
  <span style="font-size: 32px;padding-left: 10px;color:#a0a0ff;">
    <%=@user.name%> <%= render "layouts/follow_form" if current_user %>
    
  </span>
  
  
 

  
  <%=  render "layouts/stats"%>
  <%if @user.microposts.any? %>
  <br/><br/>
  <table class="microposts" summary="Microposts Table">
    <%= render @microposts %>
  </table>
  
  <br/>
  <%= will_paginate @microposts %>
  <%end%>
  

</div>
