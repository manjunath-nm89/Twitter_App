<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "custom" %>

    <title><%= title %></title>
    
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "tiny_mce/tiny_mce.js" %>
    <%= javascript_include_tag "scriptaculous.js" %>

    <script type="text/javascript" >

      function update_hidden(id)
      {
        alert("update hidden-"+id);
        document.getElementById("textarea-"+id).show();
        document.getElementById("micropost_parent_id").value=id;
        

      }
         tinyMCE.init({
           mode : "textareas",
           theme : "advanced" , //(n.b. no trailing comma, this will be critical as you experiment later)
           plugins : "emotions,spellchecker,advhr,insertdatetime,preview",
           forced_root_block : false,
           force_p_newlines : false,
           force_br_newlines : true,
           

            // Theme options - button# indicated the row# only
            theme_advanced_buttons1 : "newdocument,|,bold,italic,underline,|,justifyleft,justifycenter,justifyright,fontselect,fontsizeselect,formatselect",
            theme_advanced_buttons2 : "cut,copy,paste,|,bullist,numlist,|,outdent,indent,|,undo,redo,|,link,unlink,anchor,image,|,code,preview,|,forecolor,backcolor",
            theme_advanced_buttons3 : "insertdate,inserttime,|,spellchecker,advhr,,removeformat,|,sub,sup,|,charmap,emotions",
            theme_advanced_toolbar_location : "top",
            theme_advanced_toolbar_align : "left",
            theme_advanced_statusbar_location : "bottom",
            theme_advanced_resizing : true
          });
    </script>


    
 </head>

  <body>
    <%= render "layouts/headers" %>

      <div id="bodyText" class="round">
        
        <%= yield %>
        
      </div>
    
      <%= render "layouts/footers" %>
      
     <!-- <%= debug(params) if Rails.env.development? %> -->
  </body>
</html>
