<% flash.each do |key,value| %>
     <div style="color:#FF0000;font-size: 16px;"><%= value %></div>
<%end%>
<h1 id="introduction">Post Tweet</h1>
<p>
  Post your tweets in the Text Box given below.
</p>

<%= form_for(@micropost) do |f|  %>

<div>
  <%= f.text_area :content,:cols=>75,:rows=>7%>
 
</div>

 <%=  render "layouts/stats"%>

  <%=  f.submit "Post Tweet",:id=>"tweetbutton" %>

<%end%>

<br/>
 
<%#= render "layouts/feeds" %>

<% if @feed_items.any? %>
  <%=  nested_feed_posts @feed_items.arrange(:order => :created_at) %>
<%else%>
  <b>There are no posts currently in your feed !! </b>
<%end%>
